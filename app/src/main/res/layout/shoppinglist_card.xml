<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginBottom="0dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ripple"
        android:id="@+id/layuuu"
        android:clickable="true">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lasagne"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|bottom"
            android:layout_above="@+id/textView3"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorBlueDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Oprettet  "
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/txtName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Deadline  "
            android:id="@+id/textView5"
            android:textSize="15dp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vare : "
            android:id="@+id/textView6"
            android:textColor="@color/colorBlueDark"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/count_textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5/10"
            android:id="@+id/count_textView"
            android:textColor="@color/actionColor"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/duoDate_textView"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/creatiion_textView"
            android:layout_above="@+id/textView5"
            android:layout_toEndOf="@+id/textView3" />


    </RelativeLayout>

</android.support.v7.widget.CardView>